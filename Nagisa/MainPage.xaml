<Page
    x:Class="Nagisa.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Nagisa"
    xmlns:Assassin="using:Assassin"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded">
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <AutoSuggestBox x:Uid="SearchAutoSuggestBox" Grid.Row="0" QueryIcon="Find" PlaceholderText="[Search Downloads]"/>

        <ListView x:Name="TaskList" Grid.Row="1" SelectionMode="Multiple"
                  ItemContainerStyle="{StaticResource CustomListViewItemStyle}">
            <ListView.Header>
                <TextBlock x:Uid="TaskListNoItemsTextBlock"
                           TextAlignment="Center" 
                           Margin="16"
                           Text="[No Downloads]"
                           Visibility="Collapsed"/>
            </ListView.Header>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="Assassin:ITransferTask">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="48"/>
                            <ColumnDefinition Width="48"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="48"/>
                            <RowDefinition Height="6"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" 
                              Grid.Column="0" 
                              HorizontalAlignment="Stretch" 
                              Margin="0,4,8,4" 
                              VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" 
                                       Text="{x:Bind ResultFile, Converter={StaticResource StorageFileToFileNameConverter}, Mode=OneWay}"/>
                            <TextBlock Grid.Row="1" 
                                       Padding="0,2,0,0" 
                                       FontSize="12">
                                <Run Text="100 KB/s"/>
                                <Run CharacterSpacing="100" Text=" "/>
                                
                                <Run Text="{x:Bind BytesReceived, Converter={StaticResource Uint64ToByteSizeStringConverter}, Mode=OneWay}"/>
                                <Run Text=" / "/>
                                <Run Text="{x:Bind TotalBytesToReceive, Converter={StaticResource Uint64ToByteSizeStringConverter}, Mode=OneWay}"/>
                                
                                <Run CharacterSpacing="100" Text=" "/>
                                <Run Text="00:00:32"/>
                                
                            </TextBlock>
                                       
                        </Grid>

                        <Grid Grid.Row="0" Grid.Column="1">
                            <Grid.Resources>
                                <x:String x:Key="RetryIcon">&#xE72C;</x:String>
                                <x:String x:Key="ResumeIcon">&#xE768;</x:String>
                                <x:String x:Key="PauseIcon">&#xE769;</x:String>
                            </Grid.Resources>

                            <Button Style="{StaticResource CustomIconButtonStyle}"
                                    Content="{StaticResource RetryIcon}"
                                    ToolTipService.ToolTip="[Retry]"
                                    Visibility="{x:Bind Status, Converter={StaticResource StatusErrorToVisibleConverter}, Mode=OneWay}"/>
                            <Button Style="{StaticResource CustomIconButtonStyle}"
                                    Content="{StaticResource ResumeIcon}"
                                    ToolTipService.ToolTip="[Resume]"
                                    Visibility="{x:Bind Status, Converter={StaticResource StatusPausedToVisibleConverter}, Mode=OneWay}"/>
                            <Button Style="{StaticResource CustomIconButtonStyle}"
                                    Content="{StaticResource PauseIcon}"
                                    ToolTipService.ToolTip="[Pause]"
                                    Visibility="{x:Bind Status, Converter={StaticResource StatusRunningToVisibleConverter}, Mode=OneWay}"/>
                        </Grid>

                        <Button x:Uid="TaskItemMoreButton" 
                                Grid.Row="0"
                                Grid.Column="2"
                                Style="{StaticResource CustomIconButtonStyle}"
                                Content="&#xE10C;">
                            <Button.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem x:Uid="TaskItemOpenFolderMenuItem" Text="[Open Folder]" />
                                    <MenuFlyoutItem x:Uid="TaskItemCopyLinkMenuItem" Text="[Copy Link]" Click="CopyLinkMenuItem_Click"/>
                                    <MenuFlyoutSeparator/>
                                    <MenuFlyoutItem x:Uid="TaskItemRemoveMenuItem" Text="[Remove]"/>
                                    <MenuFlyoutSeparator/>
                                    <MenuFlyoutItem x:Uid="TaskItemPropertiesMenuItem" Text="[Properties]"/>
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>

                        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="-48,0,0,0">
                            <Grid.Resources>
                                <SolidColorBrush x:Key="ProgressBarBackgroundColor" 
                                                 Color="Black" 
                                                 Opacity="0.1"/>
                                <SolidColorBrush x:Key="ProgressBarErrorForegroundColor" 
                                                 Color="Red" 
                                                 Opacity="0.8"/>
                                <SolidColorBrush x:Key="ProgressBarPausedForegroundColor" 
                                                 Color="Orange" 
                                                 Opacity="0.8"/>
                                <SolidColorBrush x:Key="ProgressBarRunningForegroundColor" 
                                                 Color="Green" 
                                                 Opacity="0.8"/>
                            </Grid.Resources>

                            <ProgressBar VerticalAlignment="Stretch" 
                                         Background="{StaticResource ProgressBarBackgroundColor}"
                                         Foreground="{StaticResource ProgressBarErrorForegroundColor}" 
                                         Maximum="{x:Bind TotalBytesToReceive, Converter={StaticResource Uint64ToDoubleConverter}, Mode=OneWay}"
                                         Value="{x:Bind BytesReceived, Converter={StaticResource Uint64ToDoubleConverter}, Mode=OneWay}"
                                         Visibility="{x:Bind Status, Converter={StaticResource StatusErrorToVisibleConverter}, Mode=OneWay}"/>
                            <ProgressBar VerticalAlignment="Stretch" 
                                         Background="{StaticResource ProgressBarBackgroundColor}"
                                         Foreground="{StaticResource ProgressBarPausedForegroundColor}"
                                         Maximum="{x:Bind TotalBytesToReceive, Converter={StaticResource Uint64ToDoubleConverter}, Mode=OneWay}"
                                         Value="{x:Bind BytesReceived, Converter={StaticResource Uint64ToDoubleConverter}, Mode=OneWay}"
                                         Visibility="{x:Bind Status, Converter={StaticResource StatusPausedToVisibleConverter}, Mode=OneWay}"/>
                            <ProgressBar VerticalAlignment="Stretch" 
                                         Background="{StaticResource ProgressBarBackgroundColor}"
                                         Foreground="{StaticResource ProgressBarRunningForegroundColor}"
                                         Maximum="{x:Bind TotalBytesToReceive, Converter={StaticResource Uint64ToDoubleConverter}, Mode=OneWay}"
                                         Value="{x:Bind BytesReceived, Converter={StaticResource Uint64ToDoubleConverter}, Mode=OneWay}"
                                         Visibility="{x:Bind Status, Converter={StaticResource StatusRunningToVisibleConverter}, Mode=OneWay}"/>
                        </Grid>

                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

        <CommandBar Grid.Row="2">
            <CommandBar.Content>
                <StackPanel Orientation="Horizontal" Padding="0" Margin="0,13,0,0">
                    <StackPanel x:Uid="TotalDownloadBandwidthStackPanel" Margin="8,0" Orientation="Horizontal" ToolTipService.ToolTip="[Total Download Bandwidth]">
                        <FontIcon Margin="0,0,8,0" VerticalAlignment="Center" FontSize="16" Glyph="&#xE74B;"/>
                        <TextBlock VerticalAlignment="Center" FontSize="16" Text="2.4"/>
                        <TextBlock VerticalAlignment="Center" FontSize="16" Text=" MB/s"/>
                    </StackPanel>
                    <StackPanel x:Uid="TotalUploadBandwidthStackPanel" Margin="8,0" Orientation="Horizontal"  ToolTipService.ToolTip="[Total Upload Bandwidth]">
                        <FontIcon Margin="0,0,8,0"  VerticalAlignment="Center" FontSize="16" Glyph="&#xE74A;"/>
                        <TextBlock VerticalAlignment="Center" FontSize="16" Text="128"/>
                        <TextBlock VerticalAlignment="Center" FontSize="16" Text=" KB/s"/>
                    </StackPanel>
                </StackPanel>
            </CommandBar.Content>
            <CommandBar.PrimaryCommands>
                <AppBarButton x:Uid="NewTaskAppBarButton" Icon="Add" Label="[New Task]" ToolTipService.ToolTip="[New Task]" Click="NewTaskButtonClick"/>
            </CommandBar.PrimaryCommands>
            <CommandBar.SecondaryCommands>
                <!--
                <AppBarButton x:Uid="StartAllAppBarButton" Icon="Play" Label="[Start All]"/>
                <AppBarButton x:Uid="PauseAllAppBarButton" Icon="Pause" Label="[Pause All]"/>
                <AppBarSeparator/>
                <AppBarButton x:Uid="CancelAppBarButton" Icon="Remove" Label="[Cancel]"/>
                <AppBarSeparator/>
                <AppBarButton x:Uid="OpenDownloadsFolderAppBarButton" Icon="OpenLocal" Label="[Open Downloads Folder]"/>
                <AppBarSeparator/>
                <AppBarButton x:Uid="SettingsAppBarButton" Icon="Setting" Label="[Settings]"/>
                <AppBarSeparator/>
                -->          
                <AppBarButton x:Uid="AboutAppBarButton" Icon="Help" Label="[About]" Click="AboutButtonClick"/>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Grid>
</Page>
